<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "store.goldengal.app"
        versionCode = "10"
        version     = "1.0.0">

    <name>goldengal.store</name>

    <description>
        Интернет-магазин ювелирных украшений ручной работы «Дрянная девчонка»
    </description>

    <author>Tadapp</author>

    <plugin name='cordova-plugin-splashscreen' />
    <plugin name='cordova-plugin-inappbrowser' />
    <plugin name='cordova-plugin-network-information' />

    <preference name='phonegap-version' value='cli-9.0.0' />

    <gap:plugin name='onesignal-cordova-plugin' spec='2.4.5' source='npm' />

    <preference name='android-build-tool' value='gradle' />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name='orientation' value='portrait' />

    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenSpinnerColor" value="#000000" />

    <preference name="Fullscreen" value="false" />


    <platform name="android">
        <icon src="res/android/icon/ldpi_1603574635_0e992f44b6978fde3ae2.png" density="ldpi" />
        <icon src="res/android/icon/mdpi_1603574635_0e992f44b6978fde3ae2.png" density="mdpi" />
        <icon src="res/android/icon/hdpi_1603574635_0e992f44b6978fde3ae2.png" density="hdpi" />
        <icon src="res/android/icon/xhdpi_1603574635_0e992f44b6978fde3ae2.png" density="xhdpi" />
        <icon src="res/android/icon/xxhdpi_1603574635_0e992f44b6978fde3ae2.png" density="xxhdpi" />
        <icon src="res/android/icon/xxxhdpi_1603574635_0e992f44b6978fde3ae2.png" density="xxxhdpi" />

        <splash src="res/android/screen/hdpi_port_1603574647_81dec5bb89b5b4e6e4de.png" density="port-hdpi"/>
        <splash src="res/android/screen/ldpi_port_1603574647_81dec5bb89b5b4e6e4de.png" density="port-ldpi"/>
        <splash src="res/android/screen/mdpi_port_1603574647_81dec5bb89b5b4e6e4de.png" density="port-mdpi"/>
        <splash src="res/android/screen/xhdpi_port_1603574647_81dec5bb89b5b4e6e4de.png" density="port-xhdpi"/>
        <splash src="res/android/screen/hdpi_land_1603574647_81dec5bb89b5b4e6e4de.png" density="land-hdpi"/>
        <splash src="res/android/screen/ldpi_land_1603574647_81dec5bb89b5b4e6e4de.png" density="land-ldpi"/>
        <splash src="res/android/screen/mdpi_land_1603574647_81dec5bb89b5b4e6e4de.png" density="land-mdpi"/>
        <splash src="res/android/screen/xhdpi_land_1603574647_81dec5bb89b5b4e6e4de.png" density="land-xhdpi"/>
    </platform>

    <access origin='*'/>
    <plugin name='cordova-plugin-whitelist' />
    <allow-intent href='http://*/*'/>
    <allow-intent href='https://*/*'/>
    <allow-intent href='tel:*'/>
    <allow-intent href='sms:*'/>
    <allow-intent href='mailto:*'/>
    <allow-intent href='geo:*'/>

</widget>